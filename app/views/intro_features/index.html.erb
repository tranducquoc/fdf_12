<div class="intro-features">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12 center">
        <h3><%= t ".intro_title" %></h3>
      </div>
      <div class="arrows">
      </div>
      <div id="choose">
        <div class="col-lg-12"></div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 fade-in-animate-left">
          <div class="choose-wrapper">
            <%= image_tag "search-page.png", class: "img-responsive" %>
            <div class="overlay">
              <%= link_to t(".go_to_page"), @domain || root_path %>
            </div>
          </div>
          <div class="choose-des">
            <span><%= t ".orders" %></span>
          </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 fade-in-animate-right">
          <div class="choose-wrapper">
            <%= image_tag "posts-page.png", class: "img-responsive" %>
            <div class="overlay">
              <% if current_user.domains.present? %>
                <%= link_to t(".go_to_page"), domain_ads_posts_path(@domain || current_user.domains.first) %>
              <% else %>
                <%= link_to t(".go_to_page"), root_path %>
              <% end %>
            </div>
          </div>
          <div class="choose-des">
            <span><%= t ".ads_posts" %></span>
          </div>
        </div>
        <div class="clearfix"></div>
      </div>
    </div>
  </div>
</div>
<%= render "intro_features/replace_background.js.erb" %>
