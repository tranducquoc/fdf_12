<table class="table table-bordered">
  <thead>
    <tr>
      <th><%= t "oder.id" %></th>
      <th><%= t ".user" %></th>
      <th><%= t "oder.name" %></th>
      <th><%= t "oder.image" %></th>
      <th><%= t "oder.quantity" %></th>
      <th><%= t ".status" %></th>
      <th><%= t "oder.price" %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% order_products.each_with_index do |item, index| %>
      <tr>
        <input type="hidden" value="<%=item.id%>">
        <td><%= index + 1 %></td>
        <td><%= item.user_name %></td>
        <td><%= item.product_name %></td>
        <td>
          <span class="product-thumbnail">
            <%= image_tag item.product.image.url %>
          </span>
        </td>
        <td class="text-center"><%= item.quantity %></td>
        <td >
          <div class="order-product-status-<%= item.id %>">
            <%= status_order_product item %>
          </div>
        <td class="text-center">
          <strong><%= item.total_price %> <%= t"cart.vnd" %> </strong></td>
        <td class="col-md-1">
          <select  class="form-control status-order">
            <% OrderProduct.statuses.keys.each do |status| %>
              <%= option_status_items status, item %>
            <% end %>
          </select>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
