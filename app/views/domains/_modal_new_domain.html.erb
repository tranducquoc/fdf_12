<div id="new-domain-modal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header modal_header">
        <button class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title modal_text_header"><%= t "create_domain" %></h4>
      </div>
      <div class="modal-body padding_0">
        <%= form_for Domain.new do |f| %>
          <%= render "shared/error_messages", object: Domain.new %>
          <div class="form-group padding-left-right-15 padding-top-10">
            <%= f.label t "new_domain.name" %>
            <%= f.text_field :name, required: :true, class: "form-control" %>
          </div>
          <div class="form-group padding-left-right-15 padding-top-10">
            <%= f.label t "new_domain.room_chatwork" %>
            <%= f.text_field :room_chatwork, class: "form-control", placeholder: "123456,567890,..." %>
          </div>
          <div class="form-group padding-left-right-15">
            <%= f.label t "new_domain.status" %><br>
            <%= f.select :status,
              domain_status.map{|status| [t("all_status.#{status}"), status]},
              {}, {class: "form-control"} %>
          </div>
          <div class="button-form-domain">
            <button class="btn btn-default form-button"
              data-dismiss="modal"><%= t "cancel" %>
            </button>
            <%= f.submit t("common.create_button"),
              class: "btn btn_add_to_cart btn-add padding-left-right-10 form-button" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
