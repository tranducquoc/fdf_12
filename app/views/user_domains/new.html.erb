<h1 class="text-center"><%= @choosen_domain.name %></h1>  
<div class="row">
  <div class="col-md-12">
    <div class="panel panel-success">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <%= form_tag user_domains_path(domain_id: @choosen_domain.id), 
            method: :post do %>
            <div class="form-group">
              <%= label_tag(:email, t("enter_user_email")) %>
            </div>
            <div class="form-group">
              <%= email_field_tag :email, nil, class: "form-control"%>
            </div>
            <%= link_to t("continue"), domain_dashboard_shops_path(@domain), 
              class: "btn btn-warning" %>
            <%= submit_tag  t("add"), class: "btn btn-primary space-top-submit" %>
          <% end %>
        </div>
      </div>
      <div class="add-user-table">
        <table class="table table-striped table-hover table-bordered">
          <thead class="">
            <tr>
              <th><%= t "common.number" %></th>
              <th><%= t "admin.users.index.name" %></th>
              <th><%= t "admin.users.index.email" %></th>
              <th><%= t "admin.users.index.chatwork" %></th>
              <th><%= t "admin.users.index.avatar" %></th>
              <th><%= t "admin.users.index.description" %></th>
              <th><%= t "admin.users.index.actions" %></th>
            </tr>
          </thead>
          <tbody>
            <%= render "users/user" %>
          </tbody>
        </table> 
      </div>
    </div>
    <div class="col-lg-12 text-center">
      <%= paginate @users, theme: "twitter-bootstrap-3" %>
    </div>
  </div>
</div>
