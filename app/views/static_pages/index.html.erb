<!-- Pushy Menu -->
<nav class="pushy pushy-left">
  <li class="list-unstyled">
  <li><a href="#home"><%= t "home" %></a></li>
  <li><a href="#feat"><%= t "feature_index" %></a></li>
  <li><a href="#photos"><%= t "image_index" %></a></li>
  <li><a href="http://wsm.framgia.vn/all-tools" target="_blank"><%= t "more_tools" %></a></li>
  <li><a href="#contact"><%= t "contact_index" %></a></li>
  <li><%= link_to t("help_manual_index"), pdf_readers_path, target: "_blank" %></li>
  <li>
    <div>
      <a href="#" role="button"><%= t "language" %></a>
        <ul class="languages select-default ul-index-padding-left" role="menu">
          <% Settings.languages.each do|key, value| %>
            <li class="li-index-style-none" data-lang="<%= value.type %>">
              <%= link_to "#" do %>
                <%= image_tag value.image, class: "image-flag-choose" %>
                <span><%= value.name %></span>
              <% end %>
            </li>
            <div class="clearfix"></div>
          <% end %>
        </ul>
    </div>
  </li>
</nav>
<!-- Site Overlay -->
<div class="site-overlay"></div>
<header id="home">
  <div class="container-fluid">
    <!-- change the image in style.css to the class header .container-fluid [approximately row 50] -->
    <div class="container">
      <div class="row">
        <div class="col-md-3 col-xs-10">
          <a href="#" class="thumbnail logo">
            <%= image_tag "logo.png", alt: "Logo", class: "img-responsive" %>
          </a>
        </div>
        <div class="col-md-1 col-md-offset-8 col-xs-2 text-center">
          <div class="menu-btn"><span class="hamburger">&#9776;</span></div>
        </div>
      </div>
      <div class="jumbotron">
        <h1><Strong><%= t "common.base_title" %></Strong><br></h1>
        <p><%= t "forder_index_intro" %></p>
        <p><%= link_to t("header.sign_in"), new_user_session_path, class: "btn btn-lg btn-danger" %></p>
      </div>
    </div>
  </div>
</header>
<section id="feat">
  <div class="container">
    <div class="row features">
      <div class="col-md-4 text-center wow fadeInUp" data-wow-delay="100ms">
        <span class="typcn typcn-zoom-in x4 font-icon-intro"></span>
        <h4><%= t "feature.search" %></h4>
      </div>
      <div class="col-md-4 text-center wow fadeInUp" data-wow-delay="300ms">
        <span class="typcn typcn-shopping-cart x4 font-icon-intro"></span>
        <h4><%= t "feature.order" %></h4>
      </div>
      <div class="col-md-4 text-center wow fadeInUp" data-wow-delay="500ms">
        <span class="typcn typcn-tags x4 font-icon-intro"></span>
        <h4><%= t "feature.shop" %></h4>
      </div>
    </div>
  </div>
</section>
<div class="intro">
  <div class="intro-web-1">
    <div class="content-section-a">
      <div class="container">
        <div class="row wow fadeInUp" data-wow-delay="500ms">
          <div class="col-lg-5 col-lg-offset-1 col-sm-push-6  col-sm-6">
            <div class="clearfix"></div>
            <h1 class="section-heading font-title-intro">
              <strong><%= t "index.mobile.title" %></strong>
            </h1>
            <p class="lead"><%= t "index.mobile.context" %></p>
            <div class="margin-top-50">
              <%= link_to Settings.mobile_app_download_link,
                class: "btn v2-btn-success btn_download" do %>
                <i class="fa fa-cloud-download" aria-hidden="true"></i>
                <%= t "download_app" %>
              <% end %>
            </div>
          </div>
          <div class="col-lg-5 col-sm-pull-6  col-sm-6">
            <%= image_tag "index-mobile", class: "img-responsive" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="intro">
  <div class="intro-web">
    <div class="content-section-c">
      <div class="container">
        <div class="row wow fadeInUp" data-wow-delay="300ms">
