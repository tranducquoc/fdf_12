<% provide :title, t("devise.user.update_info") %>
<div class="devise">
  <div class="row">
    <h2 class="text-center title"><%= t "devise.user.update_info" %></h2>
  </div>

  <div class="row">
    <div class="col-lg-offset-3 col-lg-6 form-sign padding-top-20">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
        html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, disabled: true, class: "form-control" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label t "edit_user.password" %> <i></i><br/>
          <%= f.password_field :password, autocomplete: "off",
            class: "form-control" %>
          <% if @minimum_password_length %>
            <br />
          <% end %>
        </div>

        <div class="field">
          <%= f.label t "edit_user.password_confirm" %><br/>
          <%= f.password_field :password_confirmation, autocomplete: "off",
            class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label t "edit_user.name" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :chatwork_id %>
          <%= f.text_field :chatwork_id, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label t "edit_user.description" %>
          <%= f.text_area :description, class: "form-control disabled-resize-textarea" %>
        </div>
        <div class="field">
          <%= f.label t("edit_user.current_password"), class: "impor" %>
          <i class="impor"></i><br />
          <%= f.password_field :current_password, autocomplete: "off",
            class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label t "edit_user.avatar" %>
          <%= image_tag @user.avatar.url, class: "avatar padding_top_10px defaut-size" %>
          <%= f.file_field :avatar, accept: Settings.pictures.accepted_files,
            class: "upload_img" %>
        </div>
        <div class="actions text-center margin-top-10">
          <%= f.submit t("edit_user.update"),
            class: "btn btn-info btn-sign color-white" %>
        </div>
      <% end %>
      <%= link_to t("common.back_button"), user_path(current_user) %>
    </div>
  </div>
</div>
