<% provide :title, t(".page_title") %>

<div class="common orders">
  <div class="row">
    <h1 class="title text-center">
      <%= t ".title" %>
    </h1>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <table class="table table-striped table-hover table-bordered">
        <thead>
          <tr>
            <th><%= t "common.number" %></th>
            <th><%= t ".content" %></th>
            <th><%= t ".post" %></th>
            <th><%= t ".user" %></th>
            <th><%= t ".number_of_reports" %></th>
            <th><%= t ".status" %></th>
            <th><%= t ".action" %></th>
            <th><%= t ".created_at" %></th>
          </tr>
        </thead>

        <tbody id="admin-reports">
          <%= render @reports %>
        </tbody>
      </table>
    </div>

    <div class="col-lg-12 text-center">
      <%= paginate @reports, theme: "twitter-bootstrap-3" %>
    </div>
  </div>
</div>
