<li class="post-search-item">
  <%= link_to domain_ads_post_path(id: post.id, domain_id: @domain.id) do %>
    <div class="col-xs-12 col-sm-3 col-md-3 pt-10p">
      <% if post.post_images.any? %>
        <%= image_tag post.post_images.first.image.url, class: "img-responsive" %>
      <% end %>
    </div>
    <div class="col-xs-12 col-sm-9 col-md-9">
      <div class="row">
        <strong><%= post.title %></strong>
      </div>
      <div class="row">
        <b><%= t "ads.post.post_owner" %>:</b> <%= post.user_name %><br />
        <% if post.category %>
          <b><%= t "ads.post.category" %>:</b> <%= post.category_name %>
        <% end %><br />
        <b><%= t "ads.post.mode" %>:</b> <%= t "ads.post.modes.#{post.mode}" %><br />
        <%= t("ads.post.created_at", time: time_ago_in_words(post.created_at)).html_safe %>
      </div>
    </div>
    <div class="clearfix"></div>
  <% end %>
</li>
