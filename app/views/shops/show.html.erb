<div class="block-shop-header clearfix">
  <div class="shop-cover">
    <h2 class="row_h2">
      <%= @shop.name %>
    </h2>
    <div>
      <%= image_tag @shop.cover_image.url, class: "image-shop defaut-pic-cover" %>
    </div>
    <div class="shop-info-wrapper col-md-12">
      <div class="shop-avatar-wrapper row">
        <div class="col-sm-3 col-xs-3 shop-avatar">
        <%= image_tag @shop.avatar.url, class: "img-200" %>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-md-12 shop-nav-wrapper">
      <div class="row">
        <div class="col-md-offset-3 col-md-6 col-xs-offset-3 col-xs-5">
          <div class="row shop-basic-info">
            <h4 class="title">
              <%= @shop.name %>
              <%= render "shared/shop_status_label", shop: @shop %>
            </h4>
            <div id="rate-star">
              <%= rating_for @shop, Settings.rate, enable_half: true,
                disable_after_rate: false %>
            </div>
          </div>
        </div>
        <div class="col-md-3 col-xs-2">
          <ul class="nav shop-info">
            <li>
              <i class="fa fa-user"></i>
              <span><%= link_to @shop.owner_name, "#" %></span>
            </li>
            <li>
              <i class="fa fa-envelope"></i>
              <span><%= mail_to @shop.owner_email %></span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-12 description-wrapper style_coffee">
    <table class="table table-striped table-inverse padding-1022">
      <tr>
        <td class="for-td">
          <strong><%= t "shop_name" %></strong><%= @shop.name %>
        </td>
        <td class="for-td">
          <strong><%= t "time_auto_reject" %></strong><%= l @shop.time_auto_reject, format: :short_time %>
          <%= t "minutes" %>
        </td>
        <td class="for-td">
          <strong><%= t "number_product" %></strong><%= @shop.products.size %>
        </td>
      </tr>
    </table>
  </div>
</div>
<div class="container">
  <ul class="tags">
    <% @shop.all_tags.each do |tag| %>
      <li>
        <%= link_to tag.name, tag_path(tag), class: "tag" %>
      </li>
    <% end %>
  </ul>
</div>
<div class="row">
  <h2 class="section_title">
    <%= @products.any? ? t(".products") : t(".no_product") %>
  </h2>
  <div class="col-md-12">
    <%= render @products %>
  </div>
  <%= paginate @products %>
</div>
