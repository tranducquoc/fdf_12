    <div class="container">
      <div class="row">
        <div class="col-md-6 opaline">
          <div class="row">
            <div class="col-md-10 col-md-offset-1">
              <p class="lead"><strong><i><%= t "framgia_user_feedback_index" %></i></strong></p>
