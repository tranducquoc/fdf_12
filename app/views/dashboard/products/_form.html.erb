<div class="row">
  <%= form_for [:dashboard, @shop, @product], html: {class: "form-product"},
    authenticity_token: true, remote: true  do |f| %>
    <div class="col-xs-5 padding-right-0">
      <div class="form-group relative">
        <% Product::CROP_PRODUCT.each do |attr| %>
          <%= f.hidden_field attr.to_sym, id: "product_#{attr}" %>
        <% end %>
        <%= f.label :image, t("new_product.image") %>
        <%= image_tag @product.image.url, class: "product-avatar", id: "img_product_crop"%>
        <%= f.file_field :image, accept: Settings.pictures.accepted_files,
          class: "upload_img hidden-file", id: "product_crop" %>
        <%= link_to "javascript:void(0)", class: "choose-avatar" do %>
          <i class="material-icons">camera_enhance</i>
          <label class="margin-bottom-0"><%= t "update_image_avatar" %></label>
        <% end %>
      </div>

    </div>
    <div class="col-xs-7">
      <div class="form-group">
        <%= f.label :category_id, t("new_product.category") %>
        <%= f.select :category_id, load_select_category, {},
          {class: "form-control"} %>
      </div>
      <div class="form-group">
        <%= f.label :name do %>
          <%= t "new_product.name" %>
          <span class="color-red">*</span>
        <% end %>
        <%= f.text_field :name, placeholder: t(".product_name"),
          class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :description do %>
          <%= t "new_product.description" %>
        <% end %>
        <%= f.text_area :description, placeholder: t(".product_description"),
          class: "form-control content_note" %>
      </div>
      <div class="form-group">
        <%= f.label :price do %>
          <%= t "new_product.price" %>
          <span class="color-red">*</span>
        <% end %>
        <%= f.text_field :price, placeholder: t(".product_price"),
          class: "form-control money" %>
      </div>
      <label class="time-error"></label>
      <div class="form-group">
        <%= f.label :start_hour, t("new_product.start_hour") << ":",
          class: "width-150px" %>
        <%= f.time_select :start_hour, {}, minute_step: Settings.minute_step,
          class: "intime-group" %>
      </div>
      <div class="form-group">
        <%= f.label :end_hour, t("new_product.end_hour") << ":",
          class: "width-150px" %>
        <%= f.time_select :end_hour, {}, minute_step: Settings.minute_step,
          class: "intime-group" %>
      </div>
      <div class="form-group">
        <%= f.label :status, t("new_product.status") %>
        <%= f.select :status, options_for_select([[t("all_status.active"), :active],
          [t("all_status.inactive"), :inactive]],
          @product.id.present? ? @product.status : :active), {},
          class: "form-control" %>
      </div>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= hidden_field_tag :hidden_products_size, Settings.common.products_per_page %>
    </div>
    <div class="col-xs-12 button-group-form">
      <%= link_to t("common.back_button"), :back,
        class: "btn btn-default btn-back-to-shop form-button" %>
      <%= f.submit yield(:submit_button),
        class: "btn btn_add_to_cart btn-add padding-left-right-10 form-button" %>
    </div>
  <% end %>
</div>
<div id="crop_product_popup" class="mfp-hide crop-image-modal">
  <div id="popup">
    <h2><%= t "crop_product_image" %></h2>
    <div class="crop_image">
      <img src="" id="crop_product_img">
    </div>
    <span class="col-md-12 pull right btn-crop">
      <%= submit_tag t("crop"), class: "btn btn_add_to_cart btn-add form-button", id: "submit_crop" %>
    </span>
  </div>
</div>
 <%= javascript_include_tag "jquery.remotipart" %>
