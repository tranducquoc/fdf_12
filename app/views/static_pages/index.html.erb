</section>
<div class="row margin-to co-black prefooter wow fadeInUp" id="contact" data-wow-delay="300ms">
  <div class="col-sm-4 text-default padding-duong">
    <h1 class="com-name"><strong><%= t("company") %></strong></h1>
      <strong class="text-default">
        <%= link_to t("home"), root_path %><br></strong>
      <strong class="text-default">
        <%= link_to t("document"), pdf_readers_path, target: "_blank" %></strong>
    <h5 class="text-default"><%= t "com-infor" %></h5>
  </div>
  <div class="col-sm-4 padding-duong text-default">
    <i class="fa fa-map-marker fa-2x default-icon address-icon"></i>
    <%= t "com-add" %>
    </br>
    <i class="fa fa-mobile fa-2x default-icon"></i>
    <%= t "phone-num" %>
    </br>
    <i class="fa fa-envelope default-icon text-default" aria-hidden="true">
    </i>
    <%= mail_to t "com-email" %>
  </div>
  <div class="col-sm-4 padding-duong text-default">
    <%= t "about_label" %>
    <%= t "com-detail" %>
    </br>
    <%= link_to t("feed_back"), Settings.feedback, target: "_blank",
      class: "text-default" %>
