<div class="container">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h4 class="margin-zeroc"><strong><%= @product.name %></strong></h4></div>
    <div class="panel-body">
      <table class="table table-bordered">
        <thead>
        <tr>
          <th><%= t "dashboard.products.show.name" %></th>
          <th><%= t "dashboard.products.show.quantity" %></th>
          <th><%= t "dashboard.products.show.notes" %></th>
          <th><%= t "dashboard.products.show.price" %></th>
          <th><%= t "dashboard.products.show.total" %></th>
        </tr>
        </thead>
        <% @order_products.each do |order| %>
          <tbody>
          <tr>
            <td>
              <%= order.user_name %>
            </td>
            <td>
              <%= order.quantity %>
            </td>
            <td>
              <%= order.notes %>
            </td>
            <td>
              <%= @product.price %>
            </td>
            <td>
              <strong><%= total_price(@product.price, order.quantity).to_i %>
                <%= t "cart.vnd" %></strong>
            </td>
          </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
