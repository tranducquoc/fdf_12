<% provide :title, t(".title") %>

<div class="admin-button-header">
  <%= link_to t("common.create_button"), new_admin_user_path,
    class: "btn btn-success float-right form-button" %>
  <%= form_tag admin_set_user_index_path(excel: :xls), method: :post,
    multipart: true do %>
    <%= file_field_tag :file, onchange: "this.form.submit();",
      accept: "#{Settings.xls}, #{Settings.xlsx}", class: "hidden-file"%>
    <%= link_to t("import_user"), "javascript:void(0)",
      class: "choose-xls-file btn btn-default float-right" %>
  <% end %>
  <span>
    <%= t("download") %>
    <%= link_to t("excel"), admin_users_path(format: "xls") %>
  </span>
  <div class="admin-form-search">
    <i class="fa fa-search" aria-hidden="true"></i>
    <%= text_field_tag "search-user", "", class: "admin-search-user" %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="panel panel-success">
      <table class="table table-striped table-hover table-bordered">
        <thead class="">
          <tr>
            <th><%= t "common.number" %></th>
            <th><%= t ".name" %></th>
            <th><%= t ".email" %></th>
            <th><%= t ".group" %></th>
            <th><%= t ".chatwork" %></th>
            <th><%= t ".avatar" %></th>
            <th><%= t ".description" %></th>
            <th><%= t ".status" %></th>
            <th><%= t ".actions" %></th>
          </tr>
        </thead>
        <tbody>
          <% @i = 0 %>
          <%= render partial: "user", collection: @users, as: :user %>
        </tbody>
      </table>
    </div>
    <div class="col-lg-12 text-center per-page">
      <%= paginate @users, theme: "twitter-bootstrap-3" %>
    </div>
  </div>
</div>
