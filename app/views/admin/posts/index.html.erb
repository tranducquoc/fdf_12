<% provide :title, t("common.all_posts") %>

<div class="row">
  <div class="col-md-12">
    <div class="admin-form-search-post">
      <%= t ".search_title" %>
      <i class="fa fa-search search-post-icon" aria-hidden="true"></i>
      <%= text_field_tag "search-post", "", class: "admin-search-post" %>
    </div>

    <div class="panel panel-success">
      <table class="table table-striped table-hover table-bordered">
        <thead class="">
          <tr>
            <th><%= t "common.number" %></th>
            <th><%= t ".user_name" %></th>
            <th>
              <select class="change_flag" id="mode">
                <option value=""><%= t".mode" %></option>
                <%= select_option @post_support.all_modes %>
              </select>
            </th>
            <th>
              <select class="change_flag" id="arena">
                <option value=""><%= t".arena" %></option>
                <%= select_option @post_support.all_arenas %>
              </select>
            </th>
            <th>
              <select class="change_flag" id="category">
                <option value=""><%= t".category_name" %></option>
                <% @post_support.all_child_categories.each do |i| %>
                <option value="<%= i.id %>"><%= i.name %></option>
                <% end %>
              </select>
            </th>
            <th><%= t ".title" %></th>
            <th><%= t ".max_price" %></th>
            <th><%= t ".min_price" %></th>
            <th><%= t ".created_at" %></th>
            <th><%= t ".status" %></th>
            <th><%= t ".action" %></th>
          </tr>
        </thead>
        <tbody>
          <%= render @posts %>
        </tbody>
      </table>
    </div>
    <div class="col-lg-12 text-center" id="paginate">
      <%= paginate @posts, theme: "twitter-bootstrap-3" %>
    </div>
  </div>
</div>
